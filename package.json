{
  "private": true,
  "workspaces": [
    "packages/@jskit/*",
    "packages/test/*",
    "packages/jskit-version-marker"
  ],
  "scripts": {
    "test": "node scripts/test.js",
    "pretest": "yarn clean",
    "commit": "npx git-cz",
    "lint": "eslint --fix packages/**/*.js",
    "check-links": "node scripts/checkLinks.js",
    "clean": "rimraf packages/test/*",
    "sync": "node scripts/syncDeps.js",
    "boot": "node scripts/bootstrap.js",
    "release": "yarn --pure-lockfile && yarn clean && node scripts/release.js",
    "changelog": "node scripts/genChangelog.js run",
    "docs": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "patch-chromedriver": "node scripts/patchChromedriver.js",
    "tsc": "lerna run tsc"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommitMsg.js"
  },
  "jest": {
    "verbose": true,
    "notify": true,
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/scripts/testSetup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/template/",
      "/packages/test/",
      "/temp/",
      "/scripts/",
      ".*.helper.js"
    ]
  },
  "lint-staged": {
    "*.{js, ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/helper-module-imports": "^7.0.0",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/runtime": "^7.2.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "conventional-changelog": "3.0.5",
    "debug": "4.1.0",
    "eslint": "^5.9.0",
    "eslint-config-essentials": "^1.1.1",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "execa": "1.0.0",
    "globby": "^8.0.1",
    "http-server": "^0.11.1",
    "inquirer": "^6.0.0",
    "jest": "^23.1.0",
    "lerna": "^3.6.0",
    "lint-staged": "^7.2.0",
    "memfs": "^2.8.0",
    "prettier": "^1.15.3",
    "request": "^2.83.0",
    "rimraf": "^2.6.2",
    "semver": "^5.5.0",
    "yorkie": "^1.0.2"
  },
  "name": "shared"
}
